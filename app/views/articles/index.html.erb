<%= javascript_include_tag 'd3' %>
<%= javascript_include_tag 'd3.layout.cloud' %>
<script>(function() {

var fill = d3.scale.category20();

<% test1 = [] %>
<% test2 = [] %>

<% @articles.take(25).each {|article| test1 << article.title[0..15]} %>
<% @articles.take(25).each {|article| test2 << article.order_num * 2} %>

var jWord = <%= raw test1.to_json %>;
var jCount = <%= raw test2.to_json %>;

var layout = d3.layout.cloud()
    .size([1000,1000])
    .words(d3.zip(jWord, jCount).map(function(d) {
        return {text: d[0], size: d[1]* 2};
    }))
    .padding(5)
    .rotate(function() { return ~~(Math.random() * 2) * 90; })
    .font("Times New Roman")
    .fontSize(function(d) { return d.size; })
    .on("end", draw);

layout.start();

function draw(words) {
  d3.select("body").append("svg")
      .attr("width", layout.size()[0])
      .attr("height", layout.size()[1])
    .append("g")
      .attr("transform", "translate(" + layout.size()[0] / 2 + "," + layout.size()[1] / 2 + ")")
    .selectAll("text")
      .data(words)
    .enter().append("text")
      .style("font-size", function(d) { return d.size + "px"; })
      .style("font-family", "Times New Roman")
      .style("fill", function(d, i) { return fill(i); })
      .attr("text-anchor", "middle")
      .attr("transform", function(d) {
        return "translate(" + [d.x, d.y] + ")rotate(" + d.rotate + ")";
      })
      .text(function(d) { return d.text; });
}

})();</script>
